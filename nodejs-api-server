server {

    listen 443 ssl;
    server_name api.quack.su;

    ssl_certificate     /etc/letsencrypt/live/api.quack.su/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.quack.su/privkey.pem;

    location / {
        proxy_set_header   X-Forwarded-For $remote_addr;
        proxy_set_header   Host $http_host;
        proxy_hide_header  X-Powered-By;
        proxy_pass         http://127.0.0.1:8080;
    }

}
